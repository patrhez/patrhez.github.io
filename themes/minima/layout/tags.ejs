<h3>All Tags</h3>

<div class="tags-list" style="margin-bottom: 2rem;">
<% site.tags.each(function(tag){ %>
  <a href="<%- url_for(tag.path) %>" style="display: inline-block; margin: 0.3rem; padding: 0.3rem 0.8rem; background: #f0f0f0; border-radius: 4px; text-decoration: none;">
    <%= tag.name %> <span style="color: #888;">(<%= tag.posts.length %>)</span>
  </a>
<% }); %>
</div>

<hr style="margin: 2rem 0;">

<% site.tags.each(function(tag){ %>
  <div class="tag-section" style="margin-bottom: 2rem;">
    <h4 id="<%= tag.name %>" style="border-bottom: 1px solid #eee; padding-bottom: 0.5rem;">
      # <%= tag.name %>
    </h4>
    <% tag.posts.each(function(post){ %>
      <article>
        <div class="row">
          <div class="three columns left lit">
            <p class="bottom"><%- full_date(post.date, 'll') %></p>
          </div>
          <div class="nine columns left mb-3">
            <a href="<%- url_for(post.path) %>">
              <% if (post.title == "") { %>
                no title
              <% } else { %>
                <%- post.title %>
              <% } %>
            </a>
          </div>
        </div>
      </article>
    <% }); %>
  </div>
<% }); %>
